<!DOCTYPE html>
<html lang="en">
  <head>
    <title>WearIt Admin</title>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Bootstrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css"
    />
    <!-- Animate.css -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <!-- Navbar CSS -->
    <link rel="stylesheet" href="/css/navbar.css" />

    <!-- Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Animate.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>

    <!-- Navbar JS -->
    <script src="/js/navbar.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

    <!--  -->
    <link rel="stylesheet" href="/css/products.css" />
  </head>

  <body>
    <%- include('includes/navbar') %>
    <div class="products">
      <div class="header">
        <h1>Products Management</h1>
        <button id="create-product-btn" class="btn-create-product">
          <i class="bi bi-plus-lg"></i>
          Create Product
        </button>
      </div>
      <div class="products-table">
        <% if (products.length > 0) { %>

        <table class="table">
          <thead>
            <tr>
              <th>Product</th>
              <th>Category</th>
              <th>Gender</th>
              <th>Status</th>
              <th>Featured</th>
              <th>Sale</th>
            </tr>
          </thead>

          <tbody>
            <% products.forEach(product => { %>
            <tr>
              <!-- product-info -->
              <td>
                <div class="product-bio">
                  <a href="/admin/product/<%= product._id %>">
                
                    <img src="<%= product.productImages?.[0] ? `${DOMAIN_NAME}/${product.productImages[0]}` : '/img/default-product.webp' %>" 
                    alt="<%= product.productName %>"
                    class="product-avatar" />
                    
                    <div class="product-details">
                      <div class="product-name">
                        <%= product.productName ?? "No name"%>
                      </div>
                    </div>
                  </a>
                </div>
              </td>
      
              <!-- category -->
              <td>
                <div class="product-category">
                  <%= product.productCategory %>
                </div>
              </td>
      
              <!-- gender -->
              <td>
                <div class="product-gender">
                  <%= product.productGender %>
                </div>
              </td>
      
              <!-- status -->
              <td>
                <div class="product-status">
                  <!-- Ensure data-status is a string "true" or "false" -->
                  <select id="<%= product._id %>" class="product-status-select" data-status="<%= product.isActive ? 'true' : 'false' %>">
                    <option value="true" <%= product.isActive ? "selected" : "" %>> Active</option>
                    <option value="false" <%= !product.isActive ? "selected" : "" %>> Inactive</option>
                  </select>
                </div>
              </td>
      
              <!-- featured -->
              <td>
                <div class="product-featured">
                  <input type="checkbox" id="featured-<%= product._id %>" 
                         <%= product.isFeatured ? "checked" : "" %> />
                </div>
              </td>
      
              <!-- sale -->
              <td>
                <div class="product-sale">
                  <input type="checkbox" id="sale-<%= product._id %>" 
                         <%= product.onSale ? "checked" : "" %> />
                </div>
              </td>
            </tr>
            <% }); %>
        </tbody>

        </table>

        <% } else { %>

          <div class="empty-state">
            <i class="bi bi-box-seam"></i>
            <h3>No products found</h3>
            <p>There are no products in the system yet or your search returned no results.</p>
            <button id="create-product-empty" class="btn-create-product-empty">
              Create your first product
            </button>
          </div>

        <% } %>
      </div>
      <!-- Create product -->
      <div class="create-product">
        <div class="create-product-container">
          <div class="create-product-header">
            <h3>Create New Product</h3>
            <button class="btn-close-form">
              <i class="bi bi-x-lg"></i>
            </button>
          </div>

          <form
            id="create-product-form"
            action="/admin/product/create"
            method="POST"
            enctype="multipart/form-data"
            onsubmit="return validateProductForm()"
            target="_self"
          >
            <div class="form-group">
              <label for="productName">Product Name</label>
              <input
                type="text"
                id="productName"
                name="productName"
                class="form-control"
                required
              />
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="productCategory">Category</label>
                <select
                  id="productCategory"
                  name="productCategory"
                  class="form-control"
                  required
                >
                  <option value="" disabled selected>Select category</option>
                  <option value="TOPS">Tops</option>
                  <option value="JEANS">Jeans</option>
                  <option value="JACKETS">Jackets</option>
                  <option value="SWEATERS">Sweaters</option>
                  <option value="ACTIVEWEAR">Activewear</option>
                  <option value="SHOES">Shoes</option>
                  <option value="ACCESSORIES">Accessories</option>
                  <option value="FORMALWEAR">Formal Wear</option>
                  <option value="SLEEPWEAR">Sleepwear</option>
                  <option value="TRADITIONAL">Traditional</option>
                  <option value="OTHER">Other</option>
                </select>
              </div>

              <div class="form-group">
                <label for="productGender">Gender</label>
                <select
                  id="productGender"
                  name="productGender"
                  class="form-control"
                  required
                >
                  <option value="" disabled selected>Select gender</option>
                  <option value="MEN">Men</option>
                  <option value="WOMEN">Women</option>
                  <option value="UNISEX">Unisex</option>
                </select>
              </div>
            </div>

            <div class="form-group">
              <label for="productDesc">Description</label>
              <textarea
                id="productDesc"
                name="productDesc"
                class="form-control"
                rows="4"
              ></textarea>
            </div>

            <div class="form-group">
              <label>Product Images (up to 10)</label>
              <div class="image-upload-container">
            
                <!-- Added 7 more image upload slots -->
                <% for(let i = 1; i <= 10; i++) { %>
                <div class="image-upload">
                  <input
                    type="file"
                    name="productImages"
                    id="image-upload-<%= i %>"
                    accept="image/*"
                    class="image-input"
                  />
                  <label for="image-upload-<%= i %>" class="image-label">
                    <i class="bi bi-cloud-arrow-up"></i>
                    <span>Image <%= i %></span>
                    <img src="" class="image-preview" id="preview-<%= i %>" />
                  </label>
                </div>
                <% } %>
              </div>
            </div>

            <div class="form-actions">
              <button type="button" class="btn-cancel">Cancel</button>
              <button type="submit" class="btn-submit">Create Product</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- products JS -->
    <script src="/js/products.js"></script>
  </body>
</html>
