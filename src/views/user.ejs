  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= user.memberFullName %> - User Profile</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <!-- Navbar CSS -->
    <link rel="stylesheet" href="/css/navbar.css" />
    <!-- Common CSS -->
    <link rel="stylesheet" href="/css/common.css" />
    <!-- User CSS -->
    <link rel="stylesheet" href="/css/user.css" />
  </head>

  <%- include('includes/header') %>
<!-- Signup CSS -->
<link rel="stylesheet" href="/css/signup.css" />
  <body>
    <%- include('includes/navbar') %>

    <div class="container user-profile-container">
      <!-- User Profile Header -->
      <div class="profile-header">
        <div class="profile-image">
          <img src="<%= user.memberImage %>" alt="<%= user.memberFullName %>" />
          <div class="status-badge <%= user.memberStatus.toLowerCase() %>">
            <%= user.memberStatus %>
          </div>
        </div>
        <div class="profile-info">
          <h1><%= user.memberFullName %></h1>
          <p class="email"><%= user.memberEmail %></p>
          <div class="points-badge">
            <i class="fas fa-star"></i>
            <%= user.memberPoints %> Points
          </div>
        </div>
      </div>

      <!-- User Details Section -->
      <div class="profile-section">
        <div class="section-header">
          <h2>User Details</h2>
          <button class="btn-edit" onclick="toggleEditMode()">
            <i class="fas fa-edit"></i> Edit Profile
          </button>
        </div>
        <div class="user-details">
          <form id="userForm" class="edit-form" style="display: none;">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="form-label">Full Name</label>
                <input
                  type="text"
                  class="form-control"
                  name="memberFullName"
                  value="<%= user.memberFullName %>"
                />
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">Email</label>
                <input
                  type="email"
                  class="form-control"
                  name="memberEmail"
                  value="<%= user.memberEmail %>"
                />
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">Phone</label>
                <input
                  type="tel"
                  class="form-control"
                  name="memberPhone"
                  value="<%= user.memberPhone %>"
                />
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">Status</label>
                <select class="form-select" name="memberStatus">
                  <option value="ACTIVE" <%= user.memberStatus === 'ACTIVE' ? 'selected' : '' %>>Active</option>
                  <option value="BLOCK" <%= user.memberStatus === 'BLOCK' ? 'selected' : '' %>>Blocked</option>
                  <option value="DELETE" <%= user.memberStatus === 'DELETE' ? 'selected' : '' %>>Deleted</option>
                </select>
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">Points</label>
                <input
                  type="number"
                  class="form-control"
                  name="memberPoints"
                  value="<%= user.memberPoints %>"
                />
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">Address</label>
                <input
                  type="text"
                  class="form-control"
                  name="memberAddress"
                  value="<%= user.memberAddress %>"
                />
              </div>
              <div class="col-12 mb-3">
                <label class="form-label">Description</label>
                <textarea
                  class="form-control"
                  name="memberDesc"
                  rows="3"
                ><%= user.memberDesc %></textarea>
              </div>
            </div>
            <div class="form-actions">
              <button type="button" class="btn btn-secondary" onclick="toggleEditMode()">Cancel</button>
              <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
          </form>

          <div class="details-view">
            <div class="row">
              <div class="col-md-6">
                <div class="detail-item">
                  <label>Full Name</label>
                  <p><%= user.memberFullName %></p>
                </div>
                <div class="detail-item">
                  <label>Email</label>
                  <p><%= user.memberEmail %></p>
                </div>
                <div class="detail-item">
                  <label>Phone</label>
                  <p><%= user.memberPhone %></p>
                </div>
                <div class="detail-item">
                  <label>Status</label>
                  <p><span class="status-badge <%= user.memberStatus.toLowerCase() %>"><%= user.memberStatus %></span></p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="detail-item">
                  <label>Points</label>
                  <p><%= user.memberPoints %></p>
                </div>
                <div class="detail-item">
                  <label>Address</label>
                  <p><%= user.memberAddress || 'Not provided' %></p>
                </div>
                <div class="detail-item">
                  <label>Description</label>
                  <p><%= user.memberDesc || 'No description provided' %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Orders Section -->
      <div class="profile-section">
        <div class="section-header">
          <h2>Order History</h2>
          <div class="order-filters">
            <select class="form-select" id="orderStatusFilter">
              <option value="">All Orders</option>
              <option value="PENDING">Pending</option>
              <option value="PROCESSING">Processing</option>
              <option value="PAID">Paid</option>
              <option value="SHIPPED">Shipped</option>
              <option value="DELIVERED">Delivered</option>
              <option value="CANCELLED">Cancelled</option>
            </select>
          </div>
        </div>
        <div class="orders-list">
          <% if (user.orders && user.orders.length > 0) { %>
            <% user.orders.forEach(order => { %>
              <div class="order-card">
                <div class="order-header">
                  <div class="order-info">
                    <span class="order-id">Order #<%= order._id.slice(-6) %></span>
                    <span class="order-date"><%= new Date(order.orderDate).toLocaleDateString() %></span>
                  </div>
                  <span class="order-status <%= order.orderStatus.toLowerCase() %>">
                    <%= order.orderStatus %>
                  </span>
                </div>
                <div class="order-details">
                  <div class="row">
                    <div class="col-md-6">
                      <div class="detail-item">
                        <label>Shipping Address</label>
                        <p><%= order.orderShippingAddress %></p>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="detail-item">
                        <label>Order Total</label>
                        <p>$<%= order.orderTotalAmount.toFixed(2) %></p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>
          <% } else { %>
            <div class="no-orders">
              <i class="fas fa-shopping-bag"></i>
              <p>No orders found</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Navbar JS -->
    <script src="/js/navbar.js"></script>
    <!-- User JS -->
    <script src="/js/user.js"></script>
  </body>
  <%- include('includes/footer') %>
